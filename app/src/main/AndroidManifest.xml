<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petr.bigbrotherchat" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:name="com.example.petr.bigbrotherchat.BigBrotherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.petr.bigbrotherchat.StartupActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.petr.bigbrotherchat.ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.example.petr.bigbrotherchat.MessageActivity" >
        </activity>
    </application>

</manifest>
